INCDIR+=
CFLAGS+=-Wall -lssl -lcrypto
LDFLAGS+=-lssl -lcrypto
#LDFLAGS=-I./ ./libssl.a ./libcrypto.a -ldl -lpthread
CC=gcc

TARGET=rsa_test
TARGET_O=$(TARGET).o

SRC_C=$(shell ls *.c)
#SRC_H=$(shell ls *.h)
OBJ_C=$(patsubst %.c,%.o,$(SRC_C))

all:$(TARGET)

$(TARGET):$(TARGET_O)
	$(CC) $^  -o $@ $(CFLAGS)

%.o:%.c
	$(CC) -c $< -o $@ $(LDFLAGS) 



clean:
	rm -rf $(OBJ_C) $(TARGET) *.pem
